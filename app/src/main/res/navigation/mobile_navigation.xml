<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_restaurant">

    <fragment
        android:id="@+id/navigation_restaurant"
        android:name="com.example.restaurantreviewer.ui.home.HomeFragment"
        android:label="@string/title_restaurants"
        tools:layout="@layout/fragment_restaurants" >
        <action
            android:id="@+id/action_navigation_restaurant_to_navigation_restaurant_detail"
            app:destination="@id/navigation_restaurant_detail"
            app:popUpTo="@id/navigation_restaurant"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>

    <fragment
        android:id="@+id/navigation_food"
        android:name="com.example.restaurantreviewer.ui.dashboard.DashboardFragment"
        android:label="@string/title_food"
        tools:layout="@layout/fragment_food" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.restaurantreviewer.ui.notifications.NotificationsFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/navigation_restaurant_detail"
        android:name="com.example.restaurantreviewer.ui.restaurants.RestaurantDetailFragment"
        android:label="@string/restaurant_detail"
        tools:layout="@layout/fragment_detail_food" >
        <action
            android:id="@+id/action_navigation_restaurant_detail_to_navigation_food"
            app:destination="@id/navigation_food" />
    </fragment>
</navigation>